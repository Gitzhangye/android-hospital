<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/login"
	> 
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	    <TableRow> 
			<TextView 
				android:text="医生编号："
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText
				android:text=""
				android:id="@+id/ET_doctorNo" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow>

		<TableRow>
			<TextView 
				android:text="登录密码：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_password" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="所在科室：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<Spinner 
				android:id="@+id/Spinner_departmentObj" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="姓名：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_name" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="性别：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_sex" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow android:visibility="gone">
			<TextView 
				android:text="医生照片：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<ImageView android:id="@+id/iv_doctorPhoto" 
				android:layout_width="80dp"
				android:layout_height="80dp" 
				android:src="@drawable/noimage" 
			/> 
		</TableRow>
		<TableRow android:gravity="right" android:visibility="gone">
			<Button 
				android:text="拍照"
				android:id="@+id/btn_doctorPhoto"
				android:layout_width="60dp" 
				android:layout_height="wrap_content"
			/> 
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="学历：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_education" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="入院日期：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<DatePicker 
				android:id="@+id/dp_inDate"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
			/>



		</TableRow> 
		<TableRow>
			<TextView 
				android:text="联系电话：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_telephone" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="每日出诊次数：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText
				android:text="" 
				android:id="@+id/ET_visiteTimes"
				android:inputType="number" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="附加信息：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_memo" 
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:singleLine="false"
				android:scrollHorizontally="false"
			/>
		</TableRow> 
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:gravity="center">
		   <Button 
				android:text="确定" 
				android:id="@+id/BtnAdd"
				android:layout_height="wrap_content" 
				android:layout_marginRight="50dp"
				android:layout_width="50dp"/> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>


